# ============================================================
# .env.example — Punchout B2B Catalog Monorepo
# Copy this file to .env and fill in your actual values.
# NEVER commit the .env file with real secrets.
# ============================================================

# ─── PostgreSQL ───────────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=punchout

# ─── Medusa ───────────────────────────────────────────────────
# Random strong string — generate with: openssl rand -hex 32
JWT_SECRET=change_me_in_production
COOKIE_SECRET=change_me_in_production

# Medusa Publishable API Key (obtain from Medusa Admin after first run)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_...

# CORS Origins (comma-separated, adjust to your production domains)
STORE_CORS=http://localhost:8002
ADMIN_CORS=http://localhost:7001,http://localhost:9000
AUTH_CORS=http://localhost:8002,http://localhost:9000,http://localhost:8001

# ─── Storefront ───────────────────────────────────────────────
NEXT_PUBLIC_DEFAULT_REGION=cl
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_BASE_URL=http://localhost:8002

# ─── FastAPI Middleware ────────────────────────────────────────
# Derived from above — no need to change if using docker-compose defaults
# DATABASE_URL is set automatically in docker-compose.yml
